<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="15dp"
    android:background="@drawable/bg_card">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.rey.material.widget.Switch
        style="@style/Material.Widget.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/enable"
        app:sw_trackColor="@drawable/switch_bg_color"
        app:sw_thumbColor="@drawable/switch_color"
        android:checked="false"
        android:layout_gravity="right|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notifications"
        android:id="@+id/textView25"
        android:layout_gravity="left|center_vertical"
        android:textColor="#fff" />
</FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="#33c6cb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="You will receive notifications asking if you are wearing the Thin Ice products to make sure you didnâ€™t forget to turn off the device."
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_selection_active"
                android:id="@+id/selection"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1 hour"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:id="@+id/one"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2 hour"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:id="@+id/two"
                android:alpha="0.5" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3 hour"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:id="@+id/three"
                android:alpha="0.5" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4 hour"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:id="@+id/four"
                android:alpha="0.5" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout></FrameLayout>