<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/leftTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_registration_top_left"
        app:layout_heightPercent="23%"
        app:layout_widthPercent="50%" />

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/leftTop"
        android:layout_toRightOf="@+id/leftTop"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_registration_top_right"
        app:layout_heightPercent="23%"
        app:layout_widthPercent="50%" />

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/leftTop"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_registration_bottom_left"
        app:layout_heightPercent="77%"
        app:layout_widthPercent="50%" />

    <ImageView
        android:layout_below="@+id/leftTop"
        android:layout_toEndOf="@+id/leftTop"
        android:layout_toRightOf="@+id/leftTop"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_registration_bottom_right"
        app:layout_heightPercent="77%"
        app:layout_widthPercent="50%" />
    <ImageView
        android:scaleType="centerInside"
        android:src="@drawable/btn_avatar"
        app:layout_marginLeftPercent="39%"
        app:layout_marginTopPercent="12%"
        app:layout_heightPercent="22%"
        app:layout_widthPercent="22%" />
</android.support.percent.PercentRelativeLayout>