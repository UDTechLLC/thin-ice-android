<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@mipmap/bg_account">


    <ImageView
        android:scaleType="centerInside"
        android:src="@drawable/btn_avatar"
        android:clickable="true"
        android:id="@+id/avatar"
        app:layout_marginLeftPercent="31%"
        app:layout_marginTopPercent="4.5%"
        app:layout_heightPercent="31%"
        app:layout_widthPercent="38%" />
    <View
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="43.4%"
        app:layout_heightPercent="0.5%"
        app:layout_widthPercent="90%"
        android:background="@mipmap/bg_tabs"/>
    <com.udtech.thinice.ui.widgets.TabsView
        android:id="@+id/tabs"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="34%"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/colorAccent"
        app:stl_indicatorThickness="4dp"
        app:stl_indicatorCornerRadius="0dp"
        app:stl_overlineColor="#0000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineThickness="1dp"
        app:stl_underlineColor="#0000"
        app:stl_dividerColor="#0000"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@drawable/color_tabs"
        app:stl_defaultTabTextSize="18sp"
        app:stl_defaultTabTextHorizontalPadding="45dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        />
    <android.support.v4.view.ViewPager
        app:layout_marginTopPercent="45%"
        app:layout_heightPercent="43%"
        app:layout_widthPercent="100%"
        android:id="@+id/viewPager"
        />
    <TextView android:layout_width="match_parent"
        app:layout_marginTopPercent="88%"
        app:layout_heightPercent="10%"
        android:gravity="center"
        android:text="Save"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_button_blue"/>
</android.support.percent.PercentRelativeLayout>