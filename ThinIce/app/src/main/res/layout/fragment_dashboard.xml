<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_dashboard"
    android:clickable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/header">


        <ImageView
            android:id="@+id/menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/btn_menu"
            android:layout_marginLeft="18dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/menu"
            android:layout_toRightOf="@+id/menu"
            android:text="Dashboard"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/avatar"
        app:layout_heightPercent="20%"
        android:src="@mipmap/btn_avatar"
        app:layout_marginLeftPercent="2.7%"
        app:layout_marginTopPercent="11.5%"
        app:layout_widthPercent="36%" />

    <LinearLayout
        android:id="@+id/device_container"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_marginTopPercent="10%"
        android:src="@mipmap/btn_avatar"
        app:layout_marginLeftPercent="33%"
        app:layout_widthPercent="60%"></LinearLayout>

    <LinearLayout
        android:id="@+id/day_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/avatar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/avatar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.3"
        android:background="#33c6cb" />
</android.support.percent.PercentRelativeLayout>