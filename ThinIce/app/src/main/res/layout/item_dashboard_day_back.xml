<?xml version="1.0" encoding="utf-8"?>

<com.udtech.thinice.ui.widgets.ChildFriendlyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_header">

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:text="Cancel"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:id="@+id/save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="Save"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="15dp">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/ic_gym" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:text="Gym Sessions, hrs"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="11dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />

                                <View
                                    android:layout_width="38dp"
                                    android:layout_height="1px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="0dp"
                                    android:alpha="0.3"
                                    android:background="#33c6cb" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/gym_edit"
                                    android:background="#0fff"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textSize="14dp"
                                    android:textColor="#00e676"
                                    android:nextFocusForward="@+id/water_edit"/>

                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/ic_water" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:text="Water Intake, "
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="11dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:id="@+id/text_water" />

                                <View
                                    android:layout_width="38dp"
                                    android:layout_height="1px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="0dp"
                                    android:alpha="0.3"
                                    android:background="#33c6cb" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/water_edit"
                                    android:background="#0fff"
                                    android:gravity="center"
                                    android:text="0"
                                    android:nextFocusForward="@+id/food_edit"
                                    android:textSize="14dp"
                                    android:textColor="#00b0ff" />

                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/ic_food" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:text="Junk Food, servings"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="11dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />

                                <View
                                    android:layout_width="38dp"
                                    android:layout_height="1px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="0dp"
                                    android:alpha="0.3"
                                    android:background="#33c6cb" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/food_edit"
                                    android:background="#0fff"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textSize="14dp"
                                    android:textColor="#64ffda"
                                    android:nextFocusForward="@+id/sleep_edit" />

                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="40dp">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/ic_sleep" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:text="Hours Slept, hrs"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="11dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />

                                <View
                                    android:layout_width="38dp"
                                    android:layout_height="1px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="0dp"
                                    android:alpha="0.3"
                                    android:background="#33c6cb" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/sleep_edit"
                                    android:background="#0fff"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textSize="14dp"
                                    android:textColor="#ffd740"
                                    android:nextFocusForward="@+id/carb_edit"/>

                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/ic_carbohydrates" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:text="Carbs consumed, "
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="11dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:id="@+id/text_carbs" />

                                <View
                                    android:layout_width="38dp"
                                    android:layout_height="1px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="0dp"
                                    android:alpha="0.3"
                                    android:background="#33c6cb" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/carb_edit"
                                    android:background="#0fff"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textSize="14dp"
                                    android:textColor="#ff6e40"
                                    android:nextFocusForward="@+id/protein_edit"/>

                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@mipmap/ic_proteins" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="43dp"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:text="H-protein meals"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="11dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />

                                <View
                                    android:layout_width="38dp"
                                    android:layout_height="1px"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="0dp"
                                    android:alpha="0.3"
                                    android:background="#33c6cb" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:inputType="number"
                                    android:ems="10"
                                    android:id="@+id/protein_edit"
                                    android:background="#0fff"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textSize="14dp"
                                    android:textColor="#b2ff59" />

                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </FrameLayout>
</com.udtech.thinice.ui.widgets.ChildFriendlyScrollView>