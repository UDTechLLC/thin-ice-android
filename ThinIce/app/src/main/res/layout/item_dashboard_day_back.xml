<?xml version="1.0" encoding="utf-8"?>

<com.udtech.thinice.ui.widgets.ChildFriendlyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_card">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_header">

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:text="Cancel"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="15dp"
                        android:text="Save"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#fff" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_proteins" />

                        <EditText
                            android:id="@+id/protein_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#0000"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.3"
                        android:background="#33c6cb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_gym" />

                        <EditText
                            android:id="@+id/gym_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#0000"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.3"
                        android:background="#33c6cb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_water" />

                        <EditText
                            android:id="@+id/water_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#0000"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.3"
                        android:background="#33c6cb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_food" />

                        <EditText
                            android:id="@+id/food_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#0000"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.3"
                        android:background="#33c6cb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_sleep" />

                        <EditText
                            android:id="@+id/sleep_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#0000"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:alpha="0.3"
                        android:background="#33c6cb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_carbohydrates" />

                        <EditText
                            android:id="@+id/carb_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#0000"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#fff" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </FrameLayout>
</com.udtech.thinice.ui.widgets.ChildFriendlyScrollView>